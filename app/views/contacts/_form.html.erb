<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.text_field :linkedin, class:"form-control", placeholder:"LinkedIn" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.text_field :company, class:"form-control", placeholder:"Company" %>
  </div>
<br>
  <div class="field form-group">
    <%= form.number_field :user_id, class:"form-control", id: :contact_user_id,
    value: current_user.id, type: :hidden %>
  </div>
<br/>

  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>